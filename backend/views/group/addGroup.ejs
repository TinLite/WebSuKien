<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">Thêm nhóm mới</h3>
                </div>
                <div class="card-body">
                    <form action="/group/add" method="POST">
                        <div class="mb-3">
                            <label for="id_owner" class="form-label">ID chủ sở hữu</label>
                            <input type="text" class="form-control" id="id_owner" name="id_owner" required>
                        </div>
                        <div class="mb-3">
                            <label for="group_name" class="form-label">Tên nhóm</label>
                            <input type="text" class="form-control" id="group_name" name="group_name" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Thêm nhóm</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="/group/list" class="text-decoration-none">Quay lại danh sách nhóm</a>
                </div> 
            </div>
        </div>
    </div>
</div>